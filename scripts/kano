#!/usr/bin/env python3
"""
DEPRECATED: kano wrapper (use kano-backlog instead)

This script exists only for backward compatibility during the migration period.
It will be removed in a future release.

Per ADR-0015, the 'kano' name is reserved for a future umbrella CLI that
aggregates multiple skill CLIs. This backlog skill now uses 'kano-backlog'.
"""

import sys
import os

# Emit deprecation warning to stderr
print(
    "⚠️  DEPRECATION WARNING: 'kano' is deprecated and will be removed in a future release.",
    file=sys.stderr,
)
print(
    "   Please use 'kano-backlog' instead. Update your scripts and aliases.",
    file=sys.stderr,
)
print(
    "   The 'kano' name is reserved for a future umbrella CLI (ADR-0015).",
    file=sys.stderr,
)
print(file=sys.stderr)  # blank line for readability

# Delegate to kano-backlog with same arguments
kano_backlog_path = os.path.join(os.path.dirname(__file__), "kano-backlog")

if os.path.exists(kano_backlog_path):
    # Use os.execv to replace the current process (no overhead after warning)
    os.execv(sys.executable, [sys.executable, kano_backlog_path] + sys.argv[1:])
else:
    print(f"❌ ERROR: kano-backlog not found at {kano_backlog_path}", file=sys.stderr)
    sys.exit(1)
